<div id="chatroom_container" class="row bg-dark-blue text-white">
    <div id="side-panel" class="col-md-4 col-sm-4">
        <!-- User Email -->
        <h5 class="text-center mt-3">
            <%= current_user.email %>  
        </h5>
        
        <!-- Users Section -->
        <h4 class="text-center mt-4">Users</h4>
        <%= turbo_stream_from "users" %>
        <div id="users" class="user-list">
            <%= render @users %>
        </div>

        <!-- Rooms Section -->
        <h4 class="text-center mt-4">Rooms</h4>
        <%= turbo_stream_from "rooms" %>
        <div id="rooms" class="room-list">
            <%= render @rooms %>
        </div>

        <!-- Room Creation Form -->
        <%= render 'layouts/new_room_form' %> 
    </div>

    <div id="room-container" class="col-md-8 col-sm-8">
        <!-- Single Room Content -->
        <% if @single_room %>
            <div id="single_room" class="bg-dark-blue text-white">
                <h4 class="text-center mt-4">
                    <%= @user&.email || @single_room.name %> 
                </h4>
                <%= turbo_stream_from @single_room %> 
                <div id="messages" class="message-container mt-4">
                    <%= render @messages %>
                </div>

                <!-- New Message Form -->
                <%= render '/layouts/new_message_form' %>
            </div>
        <% end %>
    </div>
</div>
